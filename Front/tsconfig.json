{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "jsx": "react",
    "rootDir": "./App/",
    "outDir": "./App/dist/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./App"
  ],
  "exclude": [
    "./App/dist/**",
    "./node_modules/**",
    "./App/test/**"
  ]
}